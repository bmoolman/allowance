@model IEnumerable<LedgerTransaction>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>
                Balance: @Model.First().TBalance.ToString("0,000")
            </h1>
        </div>
    </div>
    @DateTime.Now

    @*data-ajax-mode="replace" data-ajax-update="#results"*@
    <form data-ajax="true" asp-action="NewTransAjax" asp-controller="Home" data-ajax-method="POST" data-ajax-success="LoadTransactions" enctype="multipart/form-data" data-ajax-confirm="Are you sure?">
        <input name="gr" id="gr" value="HW" type="text" />
        <button type="submit">Submit</button>
    </form>
    @await Html.PartialAsync("_TransDetails", Model)
</div>
 
<script>
    function LoadTransactions() {
        alert("Loaded");
    }
</script>